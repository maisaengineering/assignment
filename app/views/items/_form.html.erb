<%= form_for(@item || Item.new) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :checked %><br />
      <%= f.check_box :checked %>
    </div>
    <div class="field" style="display:none;">
      <%= f.label :todo_list_id %><br />
      <%= f.number_field :todo_list_id, :value => todo.id %>
    </div>
    <div class="actions">
      <%= f.submit id: 'submit_form' %>
    </div>
<% end %>
<script type="text/javascript">
    //validate item name
    $(document).ready(function(){
        $('#submit_form').click(function(){
            if($.trim($('#item_name').val()).length == 0){
                alert("Item name can't be blank");
                return false;
            } else{
                return true;
            }
        });
    });
</script>

